#!/usr/bin/env bash
# Install and configure HAproxy on lb-01 server.

TXT="frontend lb-01
   bind *:80
   mode http
   default_backend webservers

backend webservers
   mode http
   balance roundrobin
   server 361866-web-01 34.224.6.206:80
   server 361866-web-02 34.201.161.84:80"

sudo apt-get -y update
sudo apt-get -y install haproxy
sudo sh -c 'echo "$TXT" > /etc/haproxy/haproxy.cfg'

sudo service haproxy restart
